generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  phone       String?
  location    String?
  image       String?
  password    String
  age         Int?
  weight           Float?
  height           Float?
  gender           String?
  activity         String?
  goal             String?
  createdAt        DateTime @default(now())
  resetToken       String?
  resetTokenExpiry DateTime?
  // reference to diary model
  DiaryEntries     Diary[]
  WaterIntakeEntries WaterIntake[]      
}
model Diary{
  id        Int       @id @default(autoincrement())
  // foreign key
  userId    String
  date      DateTime?
  food      String?
  calories  Float?
  createdAt DateTime?  @default(now())

  user      User           @relation(fields:[userId],references:[id])
}

model WaterIntake{
  id              Int      @id @default(autoincrement())
  userId          String    @unique
  amount          Float?
  lastTime        String?
  date            DateTime?
  user            User    @relation(fields:[userId],references:[id])   
}